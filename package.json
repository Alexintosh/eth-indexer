{
  "name": "eth-indexer",
  "version": "0.1.2",
  "description": "High performance Ethereum smart contract event indexing for fast local retrieval",
  "author": "Dominiek Ter Heide <info@dominiek.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src/run.js\"",
    "build:clean": "rimraf ./dist",
    "build": "cross-env BABEL_ENV=commonjs babel src --out-dir lib --copy-files",
    "prestart": "npm run -s build",
    "lint": "eslint src",
    "test": "jest -i src",
    "test:integration": "jest -i integration",
    "release": "npmpub"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "bignumber.js": "^5.0.0",
    "elasticsearch": "^14.0.0",
    "ethjs": "^0.3.3",
    "ethjs-abi": "^0.2.1",
    "ethjs-query": "^0.3.3",
    "ethjs-rpc": "^0.1.8",
    "ethjs-schema": "^0.2.0",
    "leveldown": "^2.1.1",
    "levelup": "^2.0.1",
    "mongodb": "^3.0.2",
    "redis": "^2.8.0",
    "rimraf": "^2.6.2",
    "web3": "^0.20.4",
    "winston": "3.0.0-rc0"
  },
  "devDependencies": {
    "npmpub": "^3.1.0",
    "cross-env": "^5.1.3",
    "babel-cli": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "jest": "^21.2.1",
    "supertest": "^3.0.0"
  }
}
